rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload product images and logos
    match /products/{productSlug}/{allPaths=**} {
      allow read: if true; // Anyone can read product images
      allow write: if request.auth != null; // Only authenticated users can upload
    }
    
    // Allow authenticated users to upload to their own profile folder
    match /users/{userId}/{allPaths=**} {
      allow read: if true; // Anyone can read user profile images
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow read access to badges (public)
    match /badges/{badgeName} {
      allow read: if true;
      allow write: if false; // Only admin can write badges
    }
    
    // Default deny for all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
} 